{
  "detection": {
    "file_extensions": [
      ".py",
      ".js",
      ".ts",
      ".php",
      ".java"
    ],
    "search_radius": 3,
    "max_search_depth": 3
  },
  "correction": {
    "similarity_threshold": 0.7,
    "ast_analysis_enabled": true,
    "fuzzy_search_enabled": true,
    "context_window": 5
  },
  "security": {
    "scan_dangerous_patterns": true,
    "allow_system_calls": false,
    "max_file_size_mb": 10
  },
  "output": {
    "preserve_original": true,
    "generate_backup": true,
    "report_format": "json"
  },
  "guided_patching": {
    "enabled": false,
    "preview_enabled": true,
    "auto_backup": true,
    "modify_original": true
  },
  "logging": {
    "level": "WARNING",
    "console_level": "ERROR"
  }
}